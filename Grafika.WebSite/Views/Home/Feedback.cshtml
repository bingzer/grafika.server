@{ 
    var feedbackUrl = Utility.CombineUrl(AppEnvironment.Default.Server.Url, "api/content/feedback");
    var areas = new List<string>
    {
        "Just saying hi",
        "Bug",
        "Feedback",
        "Android App"
    }.Select(item => new SelectListItem { Text = item, Value = item });
}

<div class="bg-dark page-heading"></div>
<div class="page-content page-content-article">
    <header>
        <h1 class="text-center padding">Feedback</h1>
    </header>
    <p class="text-center">
        Any suggestions or feedback? Use this form to contact us (Anonymously if you wish)<br />
        Anything will be appreciated
    </p>
    <form class="form-horizontal" action="@feedbackUrl" method="post" data-type="application/json" onsubmit="return GrafikaApp.Form.onSubmit(this)">
        <div class="form-group">
            <label class="col-sm-2 control-label">Area</label>
            <div class="col-sm-8">
                @Html.DropDownList("area", areas, "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Subject</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="subject" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Email<br/>
                <span class="text-muted">Optional</span>
            </label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="email" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Message</label>
            <div class="col-sm-8">
                <textarea class="form-control" name="content" required></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">&nbsp;</label>
            <div class="col-sm-8 font-smaller">
                * is required<br />
                Email is optional. Provide this only if you want a response back from us.
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">&nbsp;</label>
            <div class="col-sm-8 text-right">
                <input class="btn btn-default" type="reset" value="Reset" />
                <input class="btn btn-primary" type="submit" value="Send"/>
            </div>
        </div>
    </form>
</div>