@model AnimationsViewModel

<div class="bg-transparent page-heading"></div>
<header id="header" class="page-content page-content-article">
    <div class="row col-lg-4">
        <h1 style="visibility: collapse">Grafika - Animation Maker</h1>
        <p id="grafika-logo" class="logo-grafika logo-grafika-md logo-grafika-center"></p>
        <hr class="primary">
        <ul class="font-larger">
            <li>Online Editor</li>
            <li>Community</li>
            <li>Comments and ratings</li>
        </ul>
    </div>
    <div class="col-lg-8 text-center">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#editor-1" data-slide-to="0" class="active"></li>
                <li data-target="#editor-2" data-slide-to="1"></li>
                <li data-target="#editor-3" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/img/online-editor-1-min.png" alt="Online Editor">
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item">
                    <img src="~/img/online-editor-2-min.png" alt="Online Editor">
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item">
                    <img src="~/img/online-editor-1-min.png" alt="Online Editor">
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="fa fa-arrow-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="fa fa-arrow-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="text-center">
            <p class="padding-xl text-center">
                <a href="/try-grafika" title="Try now" class="btn btn-xl btn-default">
                    Try it now
                </a>
            </p>
        </div>
    </div>
</header>


@section styles {
    <environment names="Development">
        <link href="~/css/GrafikaApp.Platforms.css" rel="stylesheet" type="text/css">
    </environment>
    <environment names="Production">
        <link href="~/css/GrafikaApp.Bundle.Platforms.min.css" rel="stylesheet" type="text/css">
    </environment>
}

@section scripts {
    <environment names="Development">
        <script type="text/javascript" src="~/js/jquery.easing.js"></script>
        <script type="text/javascript" src="~/js/GrafikaApp.Platforms.js"></script>
    </environment>
    <environment names="Production">
        <script type="text/javascript" src="~/js/GrafikaApp.Bundle.Platforms.min.js"></script>
    </environment>
}