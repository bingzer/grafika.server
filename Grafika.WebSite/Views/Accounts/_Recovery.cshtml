<section class="form-horizontal">
    <header>
        <p>
            It's okay, we all forget sometimes.<br />
            Simply, enter your email address that you used to register and we'll send you a recovery email.
        </p>
    </header>
    <form id="recovery-form" action="@ViewBag.ApiRecoveryUrl" method="post"
          data-callback="GrafikaApp.Dialog.close('#recovery-form'); GrafikaApp.toast('Recovery email sent')"
          onsubmit="return GrafikaApp.Form.onSubmit(this)">
        <div class="form-group">
            <label class="control-label col-sm-3">
                Email Address
            </label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="email" placeholder="Email Address" required>
            </div>
        </div>
        <div class="form-group modal-footer">
            <label class="control-label col-sm-4">
                &nbsp;
            </label>
            <div class="col-sm-8 text-right">
                <input class="btn btn-primary" type="submit" value="Send Password Reset" disabled="disabled" />
            </div>
        </div>
    </form>
</section>
<script type="text/javascript">
    $('#recovery-form input[name=email]').keydown(function () {
        if ($('#recovery-form').valid())
            $('#recovery-form input[type=submit]').removeAttr('disabled');
        else $('#recovery-form input[type=submit]').attr('disabled', 'disabled');
    });
</script>