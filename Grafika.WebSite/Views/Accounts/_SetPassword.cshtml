<form class="form-horizontal" id="password-form" action="@ViewBag.ApiPasswordUrl" method="post"
      data-callback="GrafikaApp.toast('Password is successfully set'); GrafikaApp.Dialog.close('#password-form')"
      onsubmit="return GrafikaApp.Form.onSubmit(this)">
    @await Html.PartialAsync("_PasswordForm", new PasswordFormViewModel { RequiresCurrentPassword = true })
</form>